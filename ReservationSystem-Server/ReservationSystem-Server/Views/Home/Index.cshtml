@using ReservationSystem_Server.Data.Visual
@model ReservationSystem_Server.Data.Visual.RestaurantCarouselItemVisual[]

@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex flex-column align-items-center justify-content-center">
    <img src="images/Brand.png" alt="" style="width: 48px"/>
    <span class="display-6 text-center">Bean Scene Café</span>
</div>

<div class="d-flex justify-content-center">
    <div class="carousel slide w-75" id="main-carousel" data-bs-ride="carousel">
        <div class="carousel-indicators">
            @for (int i = 0; i < Model!.Length; i++)
            {
                string activeClass = i == 0 ? "active" : "";
                <button type="button" data-bs-target="#main-carousel" data-bs-slide-to="@i" class="@activeClass"></button>
            }
        </div>
        <div class="carousel-inner">
            @{ bool first = true; }
            @foreach (RestaurantCarouselItemVisual item in Model)
            {
                string activeClass = first ? "active" : "";
                first = false;
                <div class="carousel-item @activeClass">
                    <img class="d-block w-100" src="@Url.Content(item.ImageUrl)" alt="" width="980" height="550"> @*Provide sample size for better loading experience*@
                    <div class="carousel-caption d-none d-md-block">
                        <p>@item.Text</p>
                    </div>
                </div>
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#main-carousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#main-carousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>