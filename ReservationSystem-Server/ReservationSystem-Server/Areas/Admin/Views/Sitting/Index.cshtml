<div class="text-center">
    <table class="table">
        <thead class="table-dark">
            <tr>
                <th>Type</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Capacity</th>
                <th>Is Closed</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                DateOnly lastDate = new();
            }
            @foreach (var sitting in Model!)
            {
                DateOnly thisDate = DateOnly.FromDateTime(sitting.StartTime);

                @if (lastDate != thisDate)
                {
                    lastDate = thisDate;
                    <tr class="fw-bold list-group-item-info">
                        <td colspan="7" class="text-center">
                            @thisDate.ToShortDateString()
                        </td>
                    </tr>
                }

                <tr>
                    <td>@sitting.SittingType.Description </td>
                    <td>@sitting.StartTime.ToShortTimeString()</td>
                    <td>@sitting.EndTime.ToShortTimeString()</td>
                    <td>@sitting.Capacity</td>
                    <td>@sitting.IsClosed</td>
                    <td>
                        <a class="btn btn-outline-primary btn-sm rounded-pill modal-for" asp-action="Edit" asp-route-id="@sitting.Id">Edit</a>
                    </td>
                    <td>
                        <form method="post" asp-action="Close" asp-route-id="@sitting.Id">
                        @if (!sitting.IsClosed)
                        {
                            <input type="submit" class="btn btn-outline-danger btn-sm rounded-pill" value="Close" />
                        }
                        else
                        {
                            <input type="submit" class="btn btn-outline-danger btn-sm rounded-pill disabled" value="Close" />
                        }
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

