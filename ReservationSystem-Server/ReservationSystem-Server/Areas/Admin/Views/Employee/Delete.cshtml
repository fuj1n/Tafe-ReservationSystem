@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    ViewBag.Title = "Delete User";
}

<h2>Delete User</h2>
<form method="post">
    <div asp-validation-summary="All" class="alert alert-danger"></div>

    <p class="text-danger">You are about to delete the user @Model.UserName, this operation cannot be undone. Are you sure?</p>

    <div class="btn-group">
        <button type="submit" class="btn btn-danger">Delete User</button>
        <a asp-action="Index" class="btn btn-info">Return to Users List</a>
    </div>

    <div class="visually-hidden invisible" aria-hidden="true">
        <input hidden asp-for="Id"/>
    </div>
</form>